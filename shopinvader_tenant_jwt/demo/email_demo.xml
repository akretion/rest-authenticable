<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="email_customer_password_change" model="mail.template">
        <field name="name">Password change</field>
        <field name="email_from">${(object.email or '')|safe}</field>
        <field name="subject">Password change ${object.name}</field>
        <field name="partner_to">${object.id}</field>
        <field name="model_id" ref="shopinvader.model_shopinvader_partner"/>
        <field name="auto_delete" eval="False"/>
        <field name="lang">${object.lang}</field>
        <field name="body_html"><![CDATA[ Be careful! Your password has been changed! ]]></field>
    </record>
    <record id="email_customer_password_reset" model="mail.template">
        <field name="name">Password reset</field>
        <field name="email_from">${(object.email or '')|safe}</field>
        <field name="subject">Password change ${object.name}</field>
        <field name="partner_to">${object.id}</field>
        <field name="model_id" ref="shopinvader.model_shopinvader_partner"/>
        <field name="auto_delete" eval="False"/>
        <field name="lang">${object.lang}</field>
        <field name="body_html"><![CDATA[ You have requested a password change!
            You will receive an email to change it. ]]></field>
    </record>
    <record id="mail_template_temp_token" model="mail.template">
        <field name="name">Temporary token link</field>
        <field name="email_from">${(object.email or '')|safe}</field>
        <field name="subject">Reset your password ${object.name}</field>
        <field name="partner_to">${object.id}</field>
        <field name="model_id" ref="shopinvader.model_shopinvader_partner"/>
        <field name="auto_delete" eval="False"/>
        <field name="lang">${object.lang}</field>
        <field name="body_html"><![CDATA[ You have requested a password change!
            Click on the following link to access it: ${url} ]]></field>
    </record>

</odoo>
